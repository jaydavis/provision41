@page
@model provision41.web.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to Provision41";
}

<section class="home-container" style="font-family: 'CMG Sans', sans-serif; padding: 2rem; max-width: 900px; margin: auto; text-align: center;">
    <h1 style="font-size: 2.75rem; font-weight: bold; margin-bottom: 1rem;">Welcome to Provision41</h1>
    <p style="font-size: 1.25rem; line-height: 1.6; margin-bottom: 2rem;">
        Inspired by the story of Joseph, Provision41 is building a modern storehouse — one donation at a time.
        We believe in preparing for crisis before it arrives, ensuring food and essentials are ready for those in need.
    </p>
    <a href="/donate" style="padding: 0.75rem 1.5rem; font-size: 1rem; font-weight: 600; background-color: #004785; color: white; border-radius: 0.5rem; text-decoration: none;">
        Support the Mission
    </a>

    <div style="margin-top: 3rem;">
        <img src="/images/storehouse-illustration.svg" alt="Storehouse Illustration" style="max-width: 100%; height: auto;" />
    </div>
</section>
